{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "scripthost"
    ],
    "outDir": "./build/dist",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "deploy",
    "dist"
  ]
}